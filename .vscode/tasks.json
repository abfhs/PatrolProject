{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-for-production",
      "type": "npm",
      "script": "build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "statusbar": {
          "label": "$(gear) Building for production..."
        }
      },
      "problemMatcher": ["$tsc"],
      "detail": "프론트엔드 + 백엔드 프로덕션 빌드"
    },
    {
      "label": "build-frontend",
      "type": "npm",
      "script": "build:frontend", 
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "프론트엔드만 빌드"
    },
    {
      "label": "build-backend",
      "type": "npm",
      "script": "build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"],
      "detail": "백엔드만 빌드"
    },
    {
      "label": "clean-build",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "dist", "public"],
      "group": "build",
      "windows": {
        "command": "rmdir",
        "args": ["/s", "/q", "dist", "public"],
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/c"]
          }
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "detail": "빌드 폴더 정리"
    },
    {
      "label": "full-clean-build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "clean-build",
        "build-for-production"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "detail": "완전 정리 후 프로덕션 빌드"
    }
  ]
}